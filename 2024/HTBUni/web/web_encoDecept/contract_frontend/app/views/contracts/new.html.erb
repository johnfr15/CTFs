<link rel='stylesheet' href='https://unpkg.com/augmented-ui@2.0.0/augmented-ui.min.css'>
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.35.0/codemirror.css'>
<link rel='stylesheet'
   href='https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.58.1/addon/scroll/simplescrollbars.min.css'>
<link rel="stylesheet" href="/static/css/login.css">
<style>

  .showMessage {
  position: fixed;
  bottom: 0;
  }
  .form-group {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 15px;
  }
  .form-group label {
  margin-bottom: 5px;
  font-size: 1.1em;
  color: #AD49E2;
  }
  .editable-field {
  border: 2px solid #AD49E2;
  padding: 10px;
  border-radius: 6px;
  width: 100%;
  }
  input, textarea{
  background: transparent;
  border: none !important;
  color: white !important;
  width: 100%;
  outline: none;
  font-size: 1em;
  }
</style>

<code class="code-container" style="height: 98vh; width: 98vw;">
  <div class="glow-container">
    <div class="augs" style="width: calc(100% - var(--glow-margin-new) * 2); height: calc(100% - var(--glow-margin-new) * 2);" data-augmented-ui></div>
  </div>
  <section class="augs bg" style="width: calc(100% - var(--glow-margin-new) * 2); height: calc(100% - var(--glow-margin-new) * 2);" data-augmented-ui>
    <!-- Navigation Buttons -->
    <%= render 'shared/navbar' %>

    <div class="contract-details" style="display: flex; flex-direction: column; align-items: center; justify-content: center; color: #FFFFFF; text-align: center; padding: 20px;height:90%;">
      <div style="padding: 25px; border-radius: 10px; width: 100%; height: 100%;">
      <%= form_with url: contracts_path, method: :post do %>
        <div class="form-group">
          <label for="title">Title</label>
          <div class="editable-field">
          <%= text_field_tag :title, nil, class: "form-control" %>
          </div>
        </div>
      
        <div class="form-group">
          <label for="description">Description</label>
          <div class="editable-field">
          <%= text_area_tag :description, nil, class: "form-control", rows: 4 %>
          </div>
        </div>
      
        <div class="form-group">
          <label for="amount">Amount</label>
          <div class="editable-field">
          <%= number_field_tag :amount, nil, class: "form-control" %>
          </div>
        </div>
      
        <div class="form-group">
          <label for="start_date">Start Date</label>
          <div class="editable-field">
          <%= date_field_tag :start_date, nil, class: "form-control" %>
          </div>
        </div>
      
        <div class="form-group">
          <label for="end_date">End Date</label>
          <div class="editable-field">
          <%= date_field_tag :end_date, nil, class: "form-control" %>
          </div>
        </div>
      
        <div class="form-group">
          <label for="terms">Terms</label>
          <div class="editable-field">
          <%= text_area_tag :terms, nil, class: "form-control", rows: 4 %>
          </div>
        </div>
      
        <%= submit_tag "Create Contract", style: "margin-top: 30px; padding: 10px 30px; font-size: 1.2rem; color: #FFFFFF; background-color: transparent; border: 2px solid #AD49E2 !important; border-radius: 8px; cursor: pointer; box-shadow: 0 0 10px #AD49E2;" %>
      <% end %>
      
      
      </div>

      <!-- Flash Messages -->
      <% if flash[:notice] %>
        <div class="showMessage"><%= flash[:notice] %></div>
      <% elsif flash[:alert] %>
        <div class="showMessage"><%= flash[:alert] %></div>
      <% end %>
    </div>
  </section>
</code>
